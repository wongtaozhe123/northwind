<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:fontFamily="serif-monospace"
        android:text="Categories"
        android:textColor="@color/black"
        android:textFontWeight="5"
        android:textSize="50dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/card1"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBeverage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/beverage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Beverage"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgBeverage" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/card2"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSeasoning"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/seasoning" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sauce Seasoning"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgSeasoning" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="start"
            android:id="@+id/card3"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgDessert"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/dessert" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dessert"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgBeverage" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/card4"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCheese"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/cheese" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cheese"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgSeasoning" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:id="@+id/card5"
            android:clickable="true"
            android:layout_gravity="start"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgFlour"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/flour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flour products"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgBeverage" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="end"
            android:id="@+id/card6"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgMeat"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/meat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Meat and Pie"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgSeasoning" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/card7"
            android:clickable="true"
            android:layout_gravity="start"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgVegan"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/vegan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Beverage"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgBeverage" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="end"
            android:id="@+id/card8"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:weightSum="10"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgFish"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/fish" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fish products"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/imgSeasoning" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>